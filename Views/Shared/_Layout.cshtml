<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HocAspMVC4</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HocAspMVC4.styles.css" asp-append-version="true" />
    @*<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>*@
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

    <script type="text/javascript" src="//code.jquery.com/jquery-3.6.0.min.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!--Font awesome-->
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
          rel="stylesheet" />
</head>

<body>
    <header>
        <nav class="bg-white navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3 p-1 app-navbar fixed-top navbar-scroll ">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    @Html.Raw("&") <span class="gradient-text">Coffee Blog</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Blog" asp-controller="ViewPost" asp-action="Index">
                                <span style="color:black; font-size:13px">BLOG</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Contact" asp-controller="Contact" asp-action="SendContact">
                                <span style="color:black; font-size:13px">LIÊN HỆ</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Contact" asp-controller="Post" asp-action="Create">
                                <span style="color:black; font-size:13px">VIẾT BÀI</span>
                            </a>
                        </li>
                        <li class="nav-item col-md-6 mx-auto">
                            <form asp-controller="Home" asp-action="Index">
                                <span class="btn-group">
                                    <input style="background-color: #e9ecef; font-size:11px" class="form-control" type="text" name="SearchText" placeholder="Nhập tiêu đề bài viết" />
                                    <button style="margin-left:10px;width: 70%; background-color: transparent; border: 1px solid #d70051; border-radius: 12px " type="submit">
                                        <span style="color: #d70051; font-weight:400">TÌM KIẾM</span>
                                    </button>
                                </span>
                            </form>
                        </li>
                    </ul>
                    <partial name="_LoginPartial"></partial>
                </div>
            </div>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    @*<div class="footer container">
            <p>&#169; Coppyright LeHai</p>
            <div class="social">
                <a href="#"><i class="fa-brands fa-square-facebook"></i></a>
                <a href="#"><i class="fa-brands fa-twitter"></i></a>
                <a href="#"><i class="fa-brands fa-instagram"></i></a>
            </div>
        </div>*@
    <footer class="border-top footer text-muted text-center p-2 mt-2">
        <div class="container">
            &copy; copyright Lê Minh Hải - 2080600859 <br />
            &copy; copyright Nguyễn Tấn Hoàng - 2080600871
        </div>
    </footer>


    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://code.jquery.com/jquery-3.6.3.js"
            integrity="sha256-nQLuAZGRRcILA+6dMBOvcRh5Pe310sBpanc6+QBmyVM="
            crossorigin="anonymous"></script>
</body>
</html>


